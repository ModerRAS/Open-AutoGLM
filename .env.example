# Phone Agent Configuration
# Copy this file to .env and modify as needed

# Model API Configuration
MODEL_BASE_URL=http://localhost:8000/v1
MODEL_API_KEY=EMPTY
MODEL_NAME=autoglm-phone-9b

# HTTP Retry Configuration
# MODEL_MAX_RETRIES=3
# MODEL_RETRY_DELAY=2

# Agent Configuration
AGENT_LANG=cn
# ADB_DEVICE_ID=your-device-id  # Uncomment and set if you have multiple devices

# Coordinate Scale Configuration
# Default scale factor for LLM output coordinates (default: 1.61)
# COORDINATE_SCALE=1.61
# Or set X and Y separately:
# COORDINATE_SCALE_X=1.61
# COORDINATE_SCALE_Y=1.61

# Calibration Configuration
# ENABLE_CALIBRATION=true          # Enable calibration at startup
# CALIBRATION_MODE=simple          # simple (default) or complex
# CALIBRATION_COMPLEX_ROUNDS=5     # Number of rounds for complex mode
